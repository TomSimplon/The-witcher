{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

<section id="register">
	<nav>
		<div class="menu-btn">
			<span class="bar"></span>
			<span class="bar"></span>
			<span class="bar"></span>
		</div>
		<div class="onglets">
			<a href="{{ path('app_homepage') }}">Accueil</a>
			<a href="{{ path('app_articles') }}">liste des articles</a>
			<a href="{{ path('app_quiz') }}">Testez vos connaissances</a>
			<a href="{{ path('app_forum') }}">Communauté</a>
			<a href="{{ path('app_register') }}">S'inscrire</a>
			<a href="{{ path('app_login') }}">Se connecter</a>
		</div>
	</nav>

	<div class="container">
		<div class="background">
			<img src="{{ asset('uploads/images/parcho-left.png') }}" alt="">
			<img src="{{ asset('uploads/images/parcho-right.png') }}" alt="">
			<div class="parchemin">
				<div class="formulaire">
					<form method="post">

						{% if app.user %}
							<div class="mb-3">
								<span style="color: red; font-weight: bold; font-size: 18px;">
									Vous êtes déjà inscrit
									{{ app.user.pseudonym|default('') }}
								</span>
							</div>
						{% endif %}

						<h1 class="h3 mb-3 font-weight-normal">S'inscrire</h1>
						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.pseudonym, {
                           label: 'Nom'
                        }) }}
						{{ form_row(registrationForm.email, {
                            label: 'Email'
                        }) }}
						{{ form_row(registrationForm.plainPassword, {
                           label: 'Mot de passe'
                        }) }}
						{{ form_row(registrationForm.agreeTerms, {
                           label: 'Accepter les termes d\'utilisation'
                        }) }}

	                     <button type="submit" class="btn">Envoyer</button>
	                      {{ form_end(registrationForm) }}
					</form>
					</div>
				</div>
			</div>
			<div></section>

{% endblock %}
